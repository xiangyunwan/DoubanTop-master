<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemePlus" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme" parent="AppThemePlus">
    </style>

    <style name="ViewText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DrawerNameText" parent="ViewText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Tabs" parent="AppTheme">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="TitleExpanded" parent="Title">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TitleCollapsed" parent="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleExpandedPlus" parent="Title">
        <item name="android:textSize">32.5sp</item>
    </style>

    <style name="TitleCollapsedPlus" parent="Title">
        <item name="android:textSize">20.5sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="DetailsItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/detail_item_title_color</item>
        <item name="android:textSize">@dimen/details_item_title_size</item>
    </style>
</resources>
